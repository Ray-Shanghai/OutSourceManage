												async : false,
												success : function(data) {
														if (data.code == "000") {
															layer.alert('添加成功',{icon : 6});
															$('#sysdepartInfoId').tree("reload");
														} else {
															layer.alert('添加失败',{icon : 6});
															$('#sysdepartInfoId').tree("reload");
														 }
													},
													error : function() {
													}
												});
										}, cancel : function() {
											$( '#sysdepartInfoId') .tree( "reload");
										},success: function(layero){
										 
										}
									});
								}

						});

						});
	</script>
</body>
</html>